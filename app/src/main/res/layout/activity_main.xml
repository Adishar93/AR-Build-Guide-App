<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/upload"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#ffffff"
        android:onClick="openUploadActivity"
        android:text="Upload Event"
        android:textColor="#ffffff"
        android:visibility="visible" />

    <Button
        android:id="@+id/qrcode"
        android:layout_width="153dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/mascot"
        android:layout_marginTop="20dp"
        android:text="Scan QR code"
        android:onClick="openqr"
        android:visibility="visible" />

    <Button
        android:id="@+id/recent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/qrcode"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Recent Projects"
        android:onClick="onrecent"/>

    <ImageButton
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="18dp"
        android:layout_marginTop="18dp"
        android:background="@android:color/background_light"
        android:onClick="openSettings"
        app:srcCompat="@drawable/settingsicon" />

    <ImageButton
    android:id="@+id/mascot"
    android:layout_width="148dp"
    android:layout_height="224dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="95dp"
    android:onClick="onMascotClick"
    app:srcCompat="@drawable/mascot" />


    <ImageView
        android:id="@+id/bubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="59dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/bubble1" />

</RelativeLayout>