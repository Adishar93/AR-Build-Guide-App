<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".InfoActivity"
    android:background="@drawable/ui_bg2">

    <TextView
        android:id="@+id/info_title"
        android:layout_width="155dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="55dp"
        android:fontFamily="@font/orange_juice2"
        android:text="INFO"
        android:layout_marginTop="5dp"
        android:textSize="36sp" />
    <ImageView
        android:layout_width="50dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_backbutton"
        android:onClick="onBackClick"/>


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp"
        android:background="#FFFFFF"
        android:scaleType="centerCrop" />

    <Button
        android:id="@+id/playButton"
        android:layout_width="69dp"
        android:layout_height="58dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="-2dp"
        android:background="@drawable/ic_rp_playbutton" />

    <TextView
        android:id="@+id/project_title"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        android:text=""
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/TopHorizontalSeparator"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_below="@+id/playButton"
        android:layout_marginTop="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/ic_horizontalseperator"></ImageView>

<TextView
        android:id="@+id/description_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Description"
        android:textSize="18sp"
        android:layout_below="@id/TopHorizontalSeparator"/>


    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:padding="10dp"
        android:textSize="18sp"
        android:layout_below="@id/description_title"/>
    <ImageView
    android:id="@+id/BottomHorizontalSeparator"
    android:layout_marginTop="30dp"
    android:layout_width="match_parent"
    android:layout_height="25dp"
    android:src="@drawable/ic_horizontalseperator"
    android:scaleType="fitXY"
    android:layout_below="@+id/description"
    />

    <android.support.v7.widget.RecyclerView
        android:layout_below="@id/BottomHorizontalSeparator"
        android:id="@+id/recyclerview2"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:src="@drawable/ic_horizontalseperator"
        android:scaleType="fitXY"

        />

</RelativeLayout>
</ScrollView>